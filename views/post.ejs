<div class="container">
    <div class="row justify-content-center mb-5">
        <div class="col-md-8">
            <h1 class="mb-4"><%= post.title %></h1>
            <p>By. <a href="/blog?author=<%= post.author.name %>" class="text-decoration-none"><%= post.author.name %></a> in <a href="/blog?categorie=<%= post.categorie.slug %>" class="text-decoration-none"><%= post.categorie.name %></a></p>
            <img src="https://source.unsplash.com/1200x400?<%= post.categorie.name %>" class="img-fluid" alt="<%= post.categorie.name %>">
            <article class="my-3">
                <%- post.body %>
            </article>
            <a href="/blog" class="text-decoration-none">back to blog</a>
        </div>
    </div>
</div>